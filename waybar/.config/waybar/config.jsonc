{
  "layer": "top",
  "position": "top",
  "height": 32,
  "margin-top": 8,
  "margin-left": 8,
  "margin-right": 8,
  "spacing": 8,

  "modules-left": ["hyprland/workspaces", "mpris"],
  "modules-center": ["hyprland/window"],
  "modules-right": [
    "custom/volbar",
    "wireplumber#source",
    "custom/bluetooth",
    "memory",
    "cpu",
    "temperature",
    "network",
    "clock",
    "tray",
  ],

  // â€”â€”â€” Workspaces (Hyprland) â€”â€”â€”
  "hyprland/workspaces": {
    "format": "{icon}",
    "all-outputs": true,
    "disable-scroll": false,
    "sort-by-number": true,
    "on-click": "hyprctl dispatch workspace {id}",
    "format-icons": {
      "default": "ï„Œ",
      "active": "ï„‘",
      "urgent": "ïª",
    },
  },

  // â€”â€”â€” Music Player â€”â€”â€”
  "mpris": {
    "format": "{player}: {player_icon}",
    "format-paused": "{player}: {status_icon} <i>{dynamic}</i>",
    "dynamic-order": ["artist", "title"],
    "player-icons": {
      "default": "â–¶",
      "mpv": "ğŸµ",
    },
    "status-icons": {
      "paused": "â¸",
    },
  },

  // â€”â€”â€” Window title (center) â€”â€”â€”
  "window": {
    "max-length": 80,
    "separate-outputs": false,
    "rewrite": { ".*": "{}" },
  },

  // â€”â€”â€” Audio output â€”â€”â€”
  "custom/volbar": {
    "exec": "~/.config/waybar/volbar.py",
    "return-type": "json",
    "signal": 1,
    "format": "{}", // <-- important
    "on-scroll-up": "wpctl set-volume -l 1.0 @DEFAULT_AUDIO_SINK@ 5%+",
    "on-scroll-down": "wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%-",
    "on-click": "wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle",
    "tooltip": true,
  },

  // â€”â€”â€” Microphone (input) â€”â€”â€”
  "wireplumber#source": {
    "node-type": "Audio/Source", // explicit input
    "format": "{icon} {volume}%",
    "format-muted": "ï„±",
    "format-icons": ["ï„°", "ï„°"],
    "on-click": "wpctl set-mute @DEFAULT_AUDIO_SOURCE@ toggle",
    "on-scroll-up": "wpctl set-volume @DEFAULT_AUDIO_SOURCE@ 5%+",
    "on-scroll-down": "wpctl set-volume @DEFAULT_AUDIO_SOURCE@ 5%-",
  },

  // â€”â€”â€” Bluetooth â€”â€”â€”
  "custom/bluetooth": {
    "exec": "~/.config/waybar/bluetooth.py status external",
    "return-type": "json",
    "format": "{text}",
    "tooltip": true,
    "interval": 5,
    "on-click": "~/.config/waybar/bluetooth.py toggle external",
    "signal": 11,
  },

  // â€”â€”â€” System tray â€”â€”â€”
  "tray": { "icon-size": 16, "spacing": 6 },

  // â€”â€”â€” Memory and Swap Utilization â€”â€”â€”
  "memory": {
    "interval": 30,
    "format": "{used:0.1f}G/{total:0.1f}G ïƒ‰",
  },
  // â€”â€”â€” CPU Utilization â€”â€”â€”
  "cpu": {
    "interval": 10,
    "format": "{}% ï‹›",
    "max-length": 10,
  },

  // â€”â€”â€” Temperature â€”â€”â€”
  "temperature": {
    "hwmon-path": "/sys/class/hwmon/hwmon2/temp1_input",
    "critical-threshold": 80,
    "format-critical": "{temperatureC}Â°C ï‹‡",
    "format": "{temperatureC}Â°C ï‹‰",
  },

  // â€”â€”â€” Ethernet â€”â€”â€”
  "network": {
    "interface": "enp7s0",
    "format": "{ifname}",
    "format-ethernet": "ğŸ¡… {bandwidthUpBits} ğŸ¡‡ {bandwidthDownBits}",
    "format-disconnected": "", //An empty format will hide the module.
    "tooltip-format": "{ifname} via {gwaddr} ó°Š—",
    "tooltip-format-wifi": "{essid} ({signalStrength}%) ï‡«",
    "tooltip-format-ethernet": "{ifname} ïƒ",
    "tooltip-format-disconnected": "Disconnected",
    "max-length": 50,
  },

  // â€”â€”â€” Clock â€”â€”â€”
  "clock": {
    "interval": 1,
    "format": "ï€— {:%a %b %d %H:%M}",
    "tooltip-format": "{:%A, %B %d %Y}\n{calendar}",
  },
}
