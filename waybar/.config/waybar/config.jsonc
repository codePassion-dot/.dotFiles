{
  "layer": "top",
  "position": "top",
  "height": 32,
  "margin-top": 8,
  "margin-left": 8,
  "margin-right": 8,
  "spacing": 8,

  "modules-left": ["hyprland/workspaces", "mpris"],
  "modules-center": ["hyprland/window"],
  "modules-right": [
    "custom/volbar",
    "wireplumber#source",
    "custom/bluetooth",
    "memory",
    "cpu",
    "temperature",
    "network",
    "clock",
    "tray",
  ],

  // ——— Workspaces (Hyprland) ———
  "hyprland/workspaces": {
    "format": "{icon}",
    "all-outputs": true,
    "disable-scroll": false,
    "sort-by-number": true,
    "on-click": "hyprctl dispatch workspace {id}",
    "format-icons": {
      "default": "",
      "active": "",
      "urgent": "",
    },
  },

  // ——— Music Player ———
  "mpris": {
    "format": "{player}: {player_icon}",
    "format-paused": "{player}: {status_icon} <i>{dynamic}</i>",
    "dynamic-order": ["artist", "title"],
    "player-icons": {
      "default": "▶",
      "mpv": "🎵",
    },
    "status-icons": {
      "paused": "⏸",
    },
  },

  // ——— Window title (center) ———
  "window": {
    "max-length": 80,
    "separate-outputs": false,
    "rewrite": { ".*": "{}" },
  },

  // ——— Audio output ———
  "custom/volbar": {
    "exec": "~/.config/waybar/volbar.py",
    "return-type": "json",
    "signal": 1,
    "format": "{}", // <-- important
    "on-scroll-up": "wpctl set-volume -l 1.0 @DEFAULT_AUDIO_SINK@ 5%+",
    "on-scroll-down": "wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%-",
    "on-click": "wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle",
    "tooltip": true,
  },

  // ——— Microphone (input) ———
  "wireplumber#source": {
    "node-type": "Audio/Source", // explicit input
    "format": "{icon} {volume}%",
    "format-muted": "",
    "format-icons": ["", ""],
    "on-click": "wpctl set-mute @DEFAULT_AUDIO_SOURCE@ toggle",
    "on-scroll-up": "wpctl set-volume @DEFAULT_AUDIO_SOURCE@ 5%+",
    "on-scroll-down": "wpctl set-volume @DEFAULT_AUDIO_SOURCE@ 5%-",
  },

  // ——— Bluetooth ———
  "custom/bluetooth": {
    "exec": "~/.config/waybar/bluetooth.py status external",
    "return-type": "json",
    "format": "{text}",
    "tooltip": true,
    "interval": 5,
    "on-click": "~/.config/waybar/bluetooth.py toggle external",
    "signal": 11,
  },

  // ——— System tray ———
  "tray": { "icon-size": 16, "spacing": 6 },

  // ——— Memory and Swap Utilization ———
  "memory": {
    "interval": 30,
    "format": "{used:0.1f}G/{total:0.1f}G ",
  },
  // ——— CPU Utilization ———
  "cpu": {
    "interval": 10,
    "format": "{}% ",
    "max-length": 10,
  },

  // ——— Temperature ———
  "temperature": {
    "hwmon-path": "/sys/class/hwmon/hwmon2/temp1_input",
    "critical-threshold": 80,
    "format-critical": "{temperatureC}°C ",
    "format": "{temperatureC}°C ",
  },

  // ——— Ethernet ———
  "network": {
    "interface": "enp7s0",
    "format": "{ifname}",
    "format-ethernet": "🡅 {bandwidthUpBits} 🡇 {bandwidthDownBits}",
    "format-disconnected": "", //An empty format will hide the module.
    "tooltip-format": "{ifname} via {gwaddr} 󰊗",
    "tooltip-format-wifi": "{essid} ({signalStrength}%) ",
    "tooltip-format-ethernet": "{ifname} ",
    "tooltip-format-disconnected": "Disconnected",
    "max-length": 50,
  },

  // ——— Clock ———
  "clock": {
    "interval": 1,
    "format": " {:%a %b %d %H:%M}",
    "tooltip-format": "{:%A, %B %d %Y}\n{calendar}",
  },
}
